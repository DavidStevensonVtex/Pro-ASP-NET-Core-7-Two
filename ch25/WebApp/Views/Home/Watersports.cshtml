@* Listing 21.26 Setting content in the Watersports.cshtml file in the Views/Home folder *@

@model Product

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <h6 class="bg-primary text-white text-center m-2 p-2">
        Watersports
    </h6>
    <div class="m-2">
        <table class="table table-sm table-striped table-bordered"
               data-id="@Model.ProductId">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>
                @switch (Model.Name)
                {
                    case "Kayak":
                        @: Small Boat
                        break;
                    case "Lifejacket":
                        @: Flotation Aid
                        break;
                    default:
                        @Model.Name
                        break;
                }
                </td></tr>
                <tr><th>Price</th><td>@Model.Price.ToString("c")</td></tr>
                <tr><th>Tax</th><td>@Model.Price * 0.2m</td></tr>
                <tr><th>Tax</th><td>@(Model.Price * 0.2m)</td></d></tr>
            </tbody>
        </table>
    </div>
</body>
</html>